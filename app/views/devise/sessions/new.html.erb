<div class="col-md-4 col-md-offset-4 well signin">
  <h2>Log in</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
      <%= form_group_for f, :email do %>
        <div class="input-group">
        <%= f.email_field :email, class: 'form-control', placeholder: 'Email' %>
          <span class="input-group-addon glyphicon glyphicon-user"></span>
        </div>
      <% end %>

    <%= form_group_for f, :pasword do %>
      <div class="input-group">
        <%= f.password_field :password, class: 'form-control', placeholder: 'Password' %>
        <span class="input-group-addon glyphicon glyphicon-user"></span>
      </div>
    <% end %>

    <% if devise_mapping.rememberable? -%>
      <div class="form-group">
        <%= f.check_box :remember_me %> &nbsp; <%= f.label :remember_me %>
      </div>
    <% end -%>

      <%= f.submit "Log in", class: 'btn btn-primary btn-block btn-lg' %>
  <% end %>

  <%= render "devise/shared/links" %>
</div>