<!DOCTYPE html>
<html>
<head>
  <title>Timetracker</title>
  <%= csrf_meta_tags %>
  <%= csp_meta_tag %>

  <%= stylesheet_link_tag 'application'%>
  <%= javascript_include_tag 'application'%>
</head>

<body>
<header class="container">
  <nav class="navbar navbar-light bg-light">
    <div class="navbar-text">
      <%= link_to 'Time Tracker', root_path, class: 'navbar-brand' %>
    </div>
    <div class="pull-right right-buttons">
      <% if user_signed_in? %>
        <%= link_to 'Sign out', destroy_user_session_path ,method: :delete, class: 'btn btn-default navbar-btn', id: 'sign-out' %>
      <% end %>
    </div>
  </nav>
</header>

<div class="container">
  <% flash.each do |name, message| %>
    <%= content_tag :div, message, id: "flash#{name}" %>
  <% end %>
  <div class="row">
    <%= yield %>
  </div>
</div>
</body>
</html>
